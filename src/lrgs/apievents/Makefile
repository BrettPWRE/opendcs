#LOCAL_JFLAGS= -bootclasspath $(CLASSPATH):$(JDKDIR)/jre/lib/rt.jar
LOCAL_IDLFLAGS=-I../.. -d ../.. -p lrgs

#
# The following source files are created by hand. All other java files
# in this directory will be generated by IDL.
#
JSRC = LrgsEventQueueImpl.java LrgsEventAdminImpl.java EventServer.java \
	EventClient.java LrgsEventUtil.java

JCLASS = ${JSRC:.java=.class}

#
# Putting LrgsEventQueue.java in the list will force IDL to get run before
# anything else is compiled.
#
all: LrgsEventQueue.java ${JCLASS}

include ${SRCROOT}/Makefile.Common

install:

depends:

dos: LrgsEventQueue.java \
	LrgsEventQueueImpl.class LrgsEventAdminImpl.class \
	EventClient.class LrgsEventUtil.class

#-----
LrgsEventQueue.java: apievents.idl
	$(IDL) $(IDLFLAGS) $<

clean: 
	-rm -r ./jsrc ; \
	mkdir ./jsrc
	mv $(JSRC) ./jsrc
	-rm *.java
	mv ./jsrc/* .
	rmdir ./jsrc
	-rm *.class
