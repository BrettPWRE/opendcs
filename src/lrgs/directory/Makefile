#LOCAL_JFLAGS= -bootclasspath $(CLASSPATH):$(JDKDIR)/jre/lib/rt.jar
LOCAL_IDLFLAGS=-I../.. -d ../.. -p lrgs

#
# The following source files are created by hand. All other java files
# in this directory will be generated by IDL.
#
JSRC = APIParams.java Advertiser.java NetlistSyncer.java \
	DirectoryInternalImpl.java Sweeper.java DirectoryImpl.java \
	LrgsSystemImpl.java APIServer.java showdir.java APISettings.java \
	resetapi.java EventLogger.java DirectoryServer.java

JCLASS = ${JSRC:.java=.class}

#
# Putting SharedFileDigest.java in the list will force IDL to get run before
# anything else is compiled.
#
all: Directory.java ${JCLASS}

include ${SRCROOT}/Makefile.Common

install:

depends:

dos: Directory.java \
	APIParams.class \
	DirectoryImpl.class \
	LrgsSystemImpl.class showdir.class APISettings.class \
	resetapi.class EventLogger.class


#-----
Directory.java: directory.idl
	$(IDL) $(IDLFLAGS) $<

clean: 
	-rm -r ./jsrc
	mkdir ./jsrc
	-mv $(JSRC) ./jsrc
	-rm *.java
	-mv ./jsrc/* .
	rmdir ./jsrc
	-rm *.class

